{
  "name": "mercator",
  "version": "0.1.0",
  "private": true,
  "description": "Mercator monorepo for service, agents, and shared packages.",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter \"./packages/*\" run build",
    "predev:agents": "pnpm build:packages",
    "dev:agents": "pnpm --filter @mercator/service run dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^20.16.11",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^2.1.4"
  }
}
